{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../lib/*"],
  "compilerOptions": {
    "module": "ES2022",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["../lib/*", "./lib/*"],
    },
    "allowJs": true,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
