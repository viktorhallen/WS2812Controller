{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "frontend/**/*", "frontend/**/*.vue", "lib/**/*"],
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["./frontend/*"],
      "@lib/*": ["./lib/*"],
    },
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
